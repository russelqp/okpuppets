<script>
    //Scrip btn_up
    const _header = document.querySelector("header");
    const btnUp = function() {
        let btn_up = document.createElement('i');
        btn_up.setAttribute('class', 'icofont-arrow-up btn_up' )
        btn_up.addEventListener('click', scrollUp);

        function scrollUp(){
            var currentScroll = document.documentElement.scrollTop || document.body.scrollTop;
            if (currentScroll > 10){
                window.requestAnimationFrame(scrollUp);
                window.scrollTo(0, currentScroll - (currentScroll / 10));
                btn_up.style.transform = "scale(0)";
            }
        }

        window.onscroll = function(){
        var scroll_mov = document.documentElement.scrollTop;
        //console.log('scroll ' + scroll_mov)
        if (scroll_mov > 100){
            btn_up.style.transform = "scale(1)";
            //_header.style.background = "rgba(12, 1, 13, 0.8)";
        }else if(scroll_mov < 100){
            btn_up.style.transform = "scale(0)";
            //_header.style.background = "none";
        }
        }
        let footer = document.querySelector('footer');
        
        footer.insertAdjacentElement('afterend', btn_up);
    }
    btnUp()
</script>
